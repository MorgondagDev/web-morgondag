
*
	box-sizing: border-box


html,body
	width 100%
	height 100%
	background white
	padding 0
	margin 0

body
	font-family 'OpenSansRegular'
	color black
	font-size 16px
	padding-top: 35em;
	line-height: 22px;

.isFullscreen
	overflow: scroll;
	overflow-x: auto;

section
	padding 10px 1em
	width 60%
	margin 10px auto

section.main
	transform: translate3d(0,0,0);
	position: relative;
	z-index: 5;
	background: white;
	width 100%;
	padding 0;
	margin 0;
	border-top: solid 1px bc
.loading
	margin 0 auto
	width 50px
	height 50px
	display block
	background black
	r()

.clearfix
	clear both
.left,.right
	width 50%
	float left

a,a:link,a:visited
	color black
	text-decoration underline

	&:hover,&:active
		text-decoration none


h1,h2,h3
	font-family: 'OpenSansSemibold';

h1
	font-size 28px
	margin-bottom 22px
h2
	font-size 22px
	margin-bottom 22px
.hidden
	visibility hidden

.signup
	width: 100%;
	text-align: center;

.steam
	border solid 1px bc
	padding 20px
	margin 0 auto 0px auto
	max-width 646px

@media (max-width: 325px)
	.steam
		display none