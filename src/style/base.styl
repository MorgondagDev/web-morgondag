
*
	box-sizing: border-box


html,body
	width 100%
	height 100%
	background white
	padding 0
	margin 0
	font-family 'OpenSansRegular'

body
	font-family 'OpenSansRegular'
	color black
	font-size 16px
	padding-top: 35em;
	line-height: 22px;

.isFullscreen
	overflow: scroll;
	overflow-x: auto;

section
	padding 10px 1em
	width 60%
	margin 10px auto

section.main
	transform: translate3d(0,0,0);
	position: relative;
	z-index: 5;
	background: white;
	width 100%;
	padding 0;
	margin 0;
	border-top: solid 1px bc
.loading
	margin 0 auto
	width 50px
	height 50px
	display block
	background black
	r()

.clearfix
	clear both
.left,.right
	width 50%
	float left

a,a:link,a:visited
	color black
	text-decoration underline

	&:hover,&:active
		text-decoration none


h1,h2,h3
	font-family: 'OpenSansSemibold';

h1
	font-size 28px
	margin-bottom 22px
h2
	font-size 22px
	margin-bottom 22px
.hidden
	visibility hidden

.signup
	width: 100%;
	text-align: center;

.steam
	border solid 1px bc
	padding 20px
	margin 0 auto 5px auto
	max-width 646px


@media (max-width: 325px)
	.steam
		display none


.cards
	padding: 20px 5px;
	li
		border-radius 2px
		width 100%
		height 300px
		margin 10px auto
		border solid 1px #bec0bd
		position relative
		overflow hidden
		background #000
		h2,p
			position relative
			z-index 1
		img
			position: absolute;
			width: 100%;
			z-index: 0;
			opacity: 0.7

		.meta
			bottom 0
			left 0
			color #fff
			position absolute
			padding 20px
			font-size 12px

		&:hover
			img
				opacity 1

.columns
	max-width 1200px
	margin 0 auto

.column-cards
	max-width 1200px
	margin 0 auto
	display: flex
	flex-direction: row
	justify-content: center
	margin-top: 20px;
	margin-bottom: 20px;
	a
		text-decoration none
	li
		width 50%
		margin 20px
		display inline-block
		height 350px
		text-align center

.instagram
	max-width 1200px
	margin 20px auto
	text-align: center;
	li
		width 250px
		height 250px
		margin 8px
		display inline-block
		position relative
		background #000
		img
			width 100%
			height auto
		.like
			position absolute
			left 0
			top 0
			padding 10px
			background #000
			color #fff
			font-family: 'OpenSansSemibold';

		&:hover
			img
				opacity 0.5;


.game-card
	height: 100%;
	width: 100%;
	display block
	background-size: contain;
	background-repeat: no-repeat
	background-position: center;
.game-card.rymdresa
	background-image url('../img/rymdresa.png')
.game-card.imprintx
	background-image url('../img/imprintx.png')

.column-cards h2
	margin-top 20px
	display: inline-block;

.team-info
	text-align center
	margin 40px auto 60px auto
	padding 0px

.team .game-card
	height 250px
	background-size: contain;
	background-repeat: no-repeat;
.team .left, .team .right
	padding 0 10px

.team twitter
	margin-top 0px

	time
		margin-left 0px

	img
		margin-left 0px

.center
	text-align center
	padding: 20px 0;
.btn
	border: solid 2px;
	border-radius: 5px;
	padding: 10px 15px;
	margin: 0 auto;
	text-align: center;
	text-decoration: none !important;
	transition all linear 150ms
	text-transform capitalize
	&:hover
		background black
		color white

