
.signup
	h1
		animation: hearth 1s linear infinite
		margin-bottom 10px
	p.msg
		font-size 1.2em
		max-width 700px
		margin 0 auto 20px auto
		line-height 1.4em
	em
		font-style italic
		color bc
	input
		height 40px
		padding 10px
		font-weight bold
		border solid 2px black
		margin-top 5px
		margin-bottom 5px
		font-family: 'OpenSansSemibold';
		border-radius 2px
		min-width 240px
	input[type="submit"]
		color white
		font-weight bold
		background red
		min-width 160px
		text-transform uppercase
		animation: pulseBtn 4s linear infinite
		cursor pointer
		background none;
		border-radius 0px;
		padding 10px 0

@keyframes hearth{
	0%{
		color: #7e817c
	}
	50%{
		color: darken(red,50%)
	}
	100%{
		color: #7e817c
	}
}

@keyframes pulseBtn{
	0%{
		background: #7e817c
	}
	25%{
		background: green
	}
	50%{
		background: black
	}
	100%{
		background: #7e817c
	}
}
